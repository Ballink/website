---
interface Props {
  name: string;
  contactEmail: string;
}

const {name, contactEmail} = Astro.props
---

<header
    class="max-w-screen-xl mx-auto p-4 sm:p-6 lg:p-8 flex items-center justify-between"
>
  <h1>
    <a href="/"
       class="font-bold opacity-80">{name}</a>
  </h1>

  <nav class="flex items-center gap-8">
    <a href="/about">About</a>
    <a href={`mailto:${contactEmail}`}>Contact</a>
  </nav>
</header>
